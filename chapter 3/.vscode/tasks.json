{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GTK Application",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "my_gtk_app",
                "main.c",
                "`pkg-config --cflags --libs gtk+-3.0`",
